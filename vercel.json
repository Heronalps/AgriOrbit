{
  "version": 2,
  "installCommand": "pnpm install --ignore-scripts",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "installCommand": "pnpm install --ignore-scripts",
        "buildCommand": "pnpm run build",
        "outputDirectory": "frontend/dist"
      }
    },
    {
      "src": "backend/app/main.py",
      "use": "@vercel/python",
      "config": {
        "installCommand": "echo 'PYTHON BUILD STEP IS STARTING NOW'; (exit 1)",
        "pythonVersion": "3.12"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/app/main.py"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
