{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "dist"
      }
    },
    {
      "src": "backend/app/main.py",
      "use": "@vercel/python",
      "config": {
        "installCommand": "pip3 install poetry==1.7.1 && poetry install --no-dev --no-interaction --no-ansi",
        "pythonVersion": "3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/app/main.py"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/index.html"
    }
  ]
}
